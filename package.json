{
  "name": "linterhub.schema",
  "version": "1.0.0",
  "description": "JSON schemas for linterhub",
  "scripts": {
    "gulp": "./node_modules/gulp/bin/gulp.js",
    "eslint": "./node_modules/.bin/eslint",
    "build": "gulp build",
    "test": "gulp test",
    "lint": "gulp lint",
    "import": "gulp import",
    "release": "gulp release",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "(gulp before-commit && gulp lint) || true"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linterhub/schema.git"
  },
  "author": "linterhub",
  "license": "MIT",
  "homepage": "https://schema.linterhub.com",
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "analyzeCommits": {
      "releaseRules": [
        {
          "type": "docs", "scope": ".*md", "release": "patch"
        },
        {
          "type": "fix", "release": "patch"
        },
        {
          "type": "new", "release": "patch"
        },
        {
          "type": "perf", "release": "patch"
        },
        {
          "type": "feat", "release": "minor"
        },
        {
          "type": "breaking", "release": "major"
        }
      ],
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      }
    },
    "publish": [
      {
        "path": "@semantic-release/exec",
        "cmd": "gulp release --nextRelease=${nextRelease.version}"
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          "dist/*.json"
        ]
      }
    ]
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^1.0.5",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "fancy-log": "^1.3.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-data": "^1.3.1",
    "gulp-eslint": "^4.0.2",
    "gulp-git": "^2.7.0",
    "gulp-hub": "^0.8.0",
    "gulp-json-format": "^2.0.0",
    "gulp-json-schema": "^1.0.0",
    "gulp-jsonschema-bundle": "^0.0.3",
    "husky": "^1.0.0-rc.8",
    "js-yaml": "^3.12.0",
    "json-schema-remote": "^1.3.3",
    "jsonschema": "^1.2.4",
    "npm-check": "^5.7.1",
    "semantic-release": "^15.5.2",
    "yargs": "^11.0.0"
  },
  "bugs": {
    "url": "https://github.com/linterhub/schema/issues"
  }
}
